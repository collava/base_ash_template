{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["mix"],
      "addLabels": ["deps", "hex"]
    },
    {
      "matchManagers": ["npm"],
      "addLabels": ["deps", "npm"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "automerge": true
    }
  ]
}
